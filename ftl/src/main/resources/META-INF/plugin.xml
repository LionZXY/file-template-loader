<idea-plugin>
    <id>com.github.rougsig.file-template-loader</id>
    <name>FileTemplate Loader</name>
    <vendor email="rougsig@gmail.com" url="https://github.com/rougsig/file-template-loader">Andrey Stepankov</vendor>
    <idea-version since-build="183.0"/>
    <depends>org.jetbrains.kotlin</depends>
    <depends>org.intellij.groovy</depends>

    <actions>
        <action id="com.github.rougsig.ftl.ReloadTemplatesAnAction"
                class="com.github.rougsig.ftl.ReloadTemplatesAnAction"
                text="Reload Project Templates"
                description="Reload project templates">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

    <project-components>
        <component>
            <implementation-class>com.github.rougsig.ftl.FtlProjectModule</implementation-class>
        </component>
    </project-components>
</idea-plugin>
